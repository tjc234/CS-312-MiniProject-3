<!DOCTYPE html>
<html>
    <head>
        <title>Blog</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>

    <body>

        <div class = "container">
            <h1>Welcome to Tyler's Blog</h1>

            <% if (user) { %>
                <h2>Welcome, <%= user.name %>!</h2>
                <h2>Create a New Post:</h2>
                <form action="/" method="POST">
                    <input type="hidden" name="user_id" value="<%= user.user_id %>">
    
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
    
                    <label for="content">Content:</label>
                    <textarea id="content" name="content" required></textarea>
    
                    <button type="submit">Submit</button>
                </form>
    
                <h2>Recent Posts:</h2>

                <ul>
                    <% posts.forEach(post => { %>
                        <li>
                            <h3><%= post.title %></h3>
                            <p><%= post.body %></p>
                            <p>By: <%= post.name %> on <%= post.date_created %></p>
                            <% if (post.creator_user_id === user.user_id) { %>

                                <form action="/delete" method="POST">
                                    <input type="hidden" name="blog_id" value="<%= post.blog_id %>">
                                    <button type="submit">Delete</button>
                                </form>

                                <form action="/edit" method="POST">
                                    <input type="hidden" name="blog_id" value="<%= post.blog_id %>">
                                    <button type="submit">Edit</button>
                                </form>

                            <% } %>
                        </li>
                    <% }) %>
                    
                </ul>
    
            <% } else { %>
                <h2>Please <a href="/signin">sign in</a> to create a post or view recent posts.</h2>
            <% } %>
        </div>           
         
    </body>
</html>